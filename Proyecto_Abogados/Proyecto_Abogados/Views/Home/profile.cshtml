@model IEnumerable<Proyecto_Abogados.Entities.CitaEnt>
@{
    ViewBag.Title = "profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="single_service section_padding">
    <div class="container">
        @if (ViewBag.MsjPantalla != null)
        {
            <div style="text-align:center" class="alert alert-warning" role="alert">
                @ViewBag.MsjPantalla
            </div>
        }
        <div class="main-body">
            <div class="row gutters-sm">
                <div class="col-md-4 mb-3">
                    <div class="card">
                        <div class="card-body">
                            <div class="d-flex flex-column align-items-center text-center">
                                <img src="https://picsum.photos/150" alt="User" class="rounded-circle" width="150">
                                <div class="mt-3">
                                    <h4>@Session["Nombre_Usuario"]</h4>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-8">
                    <div class="card mb-3" style="font-size: 15px;">
                        <div class="card-body">
                            <div class="row">
                                <hr><hr>
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Nombre Completo</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    @Session["Nombre_Usuario"]
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Correo</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    @Session["Correo_Usuario"]
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Identificacion</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    @Session["Identificacion"]
                                </div>
                            </div>
                            <hr><hr style="border-color: ghostwhite;">
                        </div>
                    </div>
                </div>
            </div>
            <div class="row gutters-sm">
                @foreach (var item in Model)
                {
                    <div class="col-sm-6 mb-3">
                        <div class="card h-100">
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-sm-6">
                                        <h4 class="mb-0 mt-0">@item.Nombre_Cliente</h4>
                                    </div>
                                    <div class="col-sm-4 text-secondary">
                                        <span>@item.Correo_Electronico</span>
                                    </div>
                                </div>
                                <hr>
                                <div class="bg-primary justify-content-between rounded text-white stats">
                                    <div class="row">
                                        <div class="col-sm-4">
                                            <span class="articles">Cita: </span>
                                        </div>
                                        <div class="col-sm-4 text-secondary">
                                            <span class="number">@item.Fecha_Hora.ToString("MMMM dd 'del' yyyy")</span>
                                        </div>
                                    </div>
                                </div>
                                <hr>
                                @*<div class="row mt-2">
                                    <div class="col-md-6 border-top-generic">
                                        <a href="#" class="genric-btn btn primary circle arrow">Primary Button</a>
                                    </div>
                                    <div class="col-md-6">
                                        <a href="#" class="genric-btn btn primary-border circle">Outline Button</a>
                                    </div>
                                </div>*@
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</section>
