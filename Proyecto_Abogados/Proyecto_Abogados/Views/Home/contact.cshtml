@model Proyecto_Abogados.Entities.ConsultaEnt
@{ Layout = "~/Views/Shared/_Layout.cshtml"; }

<!-- breadcrumb start-->
<section class="breadcrumb breadcrumb_bg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb_iner text-center">
                    <div class="breadcrumb_iner_item">
                        <h2>Contáctenos</h2>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- breadcrumb start-->
<!-- ================ contact section start ================= -->
<section class="contact-section section_padding">
    <div class="container">
        <div class="d-none d-sm-block mb-5 pb-4">
            <iframe style="width: 100%; height:480px; border:none;" src="https://www.openstreetmap.org/export/embed.html?bbox=-84.17784690856935%2C10.023349867829355%2C-84.16424274444581%2C10.030555172841881&amp;layer=mapnik&amp;marker=10.026952478370966%2C-84.17103383633162"></iframe><br /><small><a href="https://www.openstreetmap.org/?mlat=10.02695&amp;mlon=-84.17103#map=17/10.02695/-84.17104&amp;layers=N">Ver el mapa más grande</a></small>
        </div>


        <div class="row">
            <div class="col-12">
                <h2 class="contact-title">Envianos un Mensaje</h2>
            </div>
            <div class="col-lg-8">
                @if (ViewBag.MsjPantalla != null)
                {
                    <div style="text-align:center" class="alert alert-warning" role="alert">
                        @ViewBag.MsjPantalla
                    </div>
                }
                @using (Html.BeginForm("FormularioContacto", "Home", FormMethod.Post))
                {
                    <form class="form-contact contact_form">
                        <div class="row">
                            <div class="col-12">
                                <div class="form-group">
                                    @Html.TextAreaFor(m => m.Mensaje, new { @class = "form-control w-100", placeholder = "Mensaje", onfocus = "this.placeholder = ''", onblur = "this.placeholder = 'Ingese el Mensaje'" })
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="form-group">
                                    @Html.TextBoxFor(m => m.Nombre, new { @class = "form-control", placeholder = "Nombre", onfocus = "this.placeholder = ''", onblur = "this.placeholder = 'Enter your name'" })
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="form-group">
                                    @Html.TextBoxFor(m => m.CorreoElectronico, new { @class = "form-control", placeholder = "Correo", onfocus = "this.placeholder = ''", onblur = "this.placeholder = 'Enter email address'" })
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-group">
                                    @Html.TextBoxFor(m => m.Motivo, new { @class = "form-control", placeholder = "Asunto", onfocus = "this.placeholder = ''", onblur = "this.placeholder = 'Enter Subject'" })
                                </div>
                            </div>
                        </div>
                        <div class="form-group mt-3">
                            <button type="submit" class="button button-contactForm btn_4">Enviar</button>
                        </div>
                    </form>
                }
            </div>
            <div class="col-lg-4">
                <div class="media contact-info">
                    <span class="contact-info__icon"><i class="ti-home"></i></span>
                    <div class="media-body">
                        <h3>
                            10101 San Pedro
                        </h3>
                        <p>San Jose, Costa Rica</p>
                    </div>
                </div>
                <div class="media contact-info">
                    <span class="contact-info__icon"><i class="ti-tablet"></i></span>
                    <div class="media-body">
                        <h3>+506 40102519</h3>
                        <p>Lun a Vie 9am a 6pm</p>
                    </div>
                </div>
                <div class="media contact-info">
                    <span class="contact-info__icon"><i class="ti-email"></i></span>
                    <div class="media-body">
                        <h3>soporte@colorlib.com</h3>
                        <p>No dudes en enviarnos un mensaje!</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- ================ contact section end ================= -->
